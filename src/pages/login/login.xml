<view class="login">
    <view class='login--header'>
        <image src="{{header}}" />
        <text>重邮帮</text>
    </view>
    <view class='login--info'>
        <input type="text"
                placeholder="学号"
                placeholder-style="color: #e6e6e6"
                type="number"
                bindchange="changeStu"
                bindfocus="inputNumFocus"
                bindblur="inputNumBlur"
                class="{{inputNumFocus ? 'input-focus' : ''}}" />
        <input type="text"
                placeholder="身份证后6位 X大写"
                placeholder-style="color: #e6e6e6"
                password="true"
                value="{{id}}"
                bindchange="changeId"
                bindfocus="inputPwdFocus"
                bindblur="inputPwdBlur"
                class="{{inputPwdFocus ? 'input-focus' : ''}}" />
        <view class="btn">
          <button bindtap="loginAction">
            <text>登</text>
            <text>录</text>
          </button>
        </view>
    </view>
</view>
