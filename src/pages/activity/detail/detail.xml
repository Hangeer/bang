<view class="container">
    <view class="content">
        <view class="title">
            <view>
                {{title}}
            </view>
        </view>
        <view class="vice-title">
            <navigator url="##" class="copyright">
                {{actInfo.host}}
            </navigator>
            {{actInfo.date}}
            <text class="place">{{actInfo.place}}</text>
        </view>
        <view class="cover">
            <image src="{{actInfo.img}}"></image>
        </view>
        <view class="context">
            {{actInfo.detail}}
        </view>
    </view>
</view>
