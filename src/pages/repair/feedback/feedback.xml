<view class="feedback">
  <view class="header">
    <view class="service-item">
      <view class="service-item__icon icon--people"></view>
      <view class="service-item__title">反馈人</view>
      <view class="service-item__value">你的名字你的名字你的名字fdvgfds</view>
      <view class="service-item__choose">
        <view class="service-item__choose-item service-item__choose-item__active">投诉</view>
        <view class="service-item__choose-item">建议</view>
      </view>
    </view>
    <view class="service-item">
      <view class="service-item__icon icon--phone"></view>
      <view class="service-item__title">电话</view>
      <input class="service-item__value"
              placeholder="请输入电话号码"
              maxlength="11"
              type="digit"
              placeholder-style="color: #b6b6b6" />
    </view>
    <view class="service-item">
      <view class="service-item__icon icon--item"></view>
      <view class="service-item__title">服务项目</view>
      <picker class="service-item__value"
              bindchange="bindServiceChange"
              value="{{serviceIndex}}"
              range="{{service}}">
        <view class="picker">
          {{service[serviceIndex]}}
        </view>
      </picker>
    </view>
    <view class="service-item">
      <picker class="service-item__value"
              bindchange="bindDetailChange"
              value="{{detailIndex}}"
              range="{{detail[serviceIndex]}}">
        <view class="picker">
          {{detail[serviceIndex][detailIndex]}}
        </view>
      </picker>
    </view>
    <view class="service-item">
      <view class="service-item__icon icon--area"></view>
      <view class="service-item__title">服务区域</view>
      <picker class="service-item__value"
              bindchange="bindAreaChange"
              value="{{areaIndex}}"
              range="{{area}}">
        <view class="picker">
          {{area[areaIndex]}}
        </view>
      </picker>
    </view>
    <view class="service-item">
      <input class="service-item__value"
              placeholder="请输入详细区域"
              placeholder-style="color: #b6b6b6" />
    </view>
  </view>
  <view class="seperate-line"></view>
  <view class="footer">
    <view class="service-item">
      <view class="service-item__icon icon--title"></view>
      <view class="service-item__title">标题</view>
      <input class="service-item__value"
              placeholder="请输入标题"
              placeholder-style="color: #b6b6b6" />
    </view>
    <view class="service-item">
      <view class="service-item__icon icon--text"></view>
      <view class="service-item__title">反馈内容</view>
      <textarea placeholder="请输入反馈内容"
                class="service-item__text"
                placeholder-style="color: #b6b6b6" />
    </view>
    <view class="service-item">
      <view class="service-item__icon icon--pic"></view>
      <view class="upload-img"
            bindtap="uploadImg"
            wx:if="{{!showImg}}" >+</view>
      <image class="show-img"
              src="{{imgSrc}}"
              wx:if="{{showImg}}"></image>
    </view>
    <view class="submit-btn">提 交</view>
  </view>
</view>
