<view class="header">
  <input class="header-input" placeholder="搜索"></input>
</view>
<view class="main">
  <block wx:for="{{searchItems}}" wx:key="search_{{index}}">
    <view class="search-item">
      <view class="search-head" data-index="{{index}}" bindtap="showBookInfor">
        <text class="search-head__left">{{item.name}}</text>
        <view wx:if="{{item.hidden}}" class="search-head__right"></view>
        <view wx:else class="search-head__right search-head__right-focus"></view>
      </view>
      <view hidden="{{item.hidden}}">
        <view class="search-body">
          <view class="search-body__left space">作者</view>
          <text class="search-body__right">{{item.author}}</text>
        </view>
        <view class="search-body">
          <view class="search-body__left space">编号</view>
          <text class="search-body__right">{{item.number}}</text>
        </view>
        <view class="search-body">
          <view class="search-body__left">馆藏地</view>
          <text class="search-body__right">{{item.position}}</text>
        </view>
      </view>
    </view>
  </block>
</view>
